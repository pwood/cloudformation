{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Stack for the Steam depot to S3 backend fetcher.",
    "Resources": {
        "ECRRepository": {
            "Type": "AWS::ECR::Repository",
            "Properties": {
                "RepositoryName": "backend/fetcher"
            }
        },
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "stationeering-gamedata",
                "VersioningConfiguration": {
                    "Status": "Enabled"
                }
            }
        },
        "FetcherTaskRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "ECSAssume",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "ecs-tasks.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "PermitS3Sync",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Action": [
                                        "s3:DeleteObject",
                                        "s3:GetBucketLocation",
                                        "s3:GetObject",
                                        "s3:ListBucket",
                                        "s3:PutObject",
                                        "s3:ListObjects"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::Sub": [
                                                "arn:aws:s3:::${BucketName}",
                                                {
                                                    "BucketName": {
                                                        "Ref": "S3Bucket"
                                                    }
                                                }
                                            ]
                                        },
                                        {
                                            "Fn::Sub": [
                                                "arn:aws:s3:::${BucketName}/*",
                                                {
                                                    "BucketName": {
                                                        "Ref": "S3Bucket"
                                                    }
                                                }
                                            ]
                                        }
                                    ],
                                    "Effect": "Allow"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "ECSTask": {
            "Type": "AWS::ECS::TaskDefinition",
            "Properties": {
                "Cpu": "256",
                "Memory": "0.5GB",
                "ExecutionRoleArn": {
                    "Fn::ImportValue": "ECSTaskExecutionRoleARN"
                },
                "TaskRoleArn": {
                    "Fn::GetAtt": [
                        "FetcherTaskRole",
                        "Arn"
                    ]
                },
                "NetworkMode": "awsvpc",
                "RequiresCompatibilities": [
                    "FARGATE"
                ],
                "ContainerDefinitions": [
                    {
                        "Memory": 512,
                        "Environment": [
                            {
                                "Name": "S3_BUCKET_NAME",
                                "Value": {
                                    "Ref": "S3Bucket"
                                }
                            }
                        ],
                        "Essential": true,
                        "Image": {
                            "Fn::Sub": "${AWS::AccountId}.dkr.ecr.eu-west-1.amazonaws.com/backend/fetcher:latest"
                        },
                        "LogConfiguration": {
                            "LogDriver": "awslogs",
                            "Options": {
                                "awslogs-group": "backend",
                                "awslogs-region": {
                                    "Ref": "AWS::Region"
                                },
                                "awslogs-stream-prefix": "fetcher"
                            }
                        },
                        "Name": "fetcher"
                    }
                ]
            }
        },
        "LogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": "backend",
                "RetentionInDays": 7
            }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "AllowLambdaToAssume",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "PermitS3Sync",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ecs:RunTask"
                                    ],
                                    "Resource": [
                                        {
                                            "Ref": "ECSTask"
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "LoggingPolicy",
                        "PolicyDocument": {
                            "Id": "LoggingPolicy",
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "arn:aws:logs:*:*:*"
                                    ]
                                }
                            ],
                            "Version": "2012-10-17"
                        }
                    }
                ]
            }
        },
        "TaskInvokerLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "index.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Fn::ImportValue": "LambdaBucket"
                    },
                    "S3Key": "fetcher-invoker-v03.zip"
                },
                "Runtime": "nodejs8.10",
                "Timeout": "5"
            }
        },
        "LambdaLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": [
                        "/aws/lambda/${functionName}",
                        {
                            "functionName": {
                                "Ref": "TaskInvokerLambda"
                            }
                        }
                    ]
                },
                "RetentionInDays": 7
            }
        },
        "LambdaSchedule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Description": "ScheduledRule",
                "ScheduleExpression": "cron(5 * * * ? *)",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "TaskInvokerLambda",
                                "Arn"
                            ]
                        },
                        "Id": "TargetFunctionV1"
                    }
                ]
            }
        },
        "LambdaSchedulePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "TaskInvokerLambda"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "LambdaSchedule",
                        "Arn"
                    ]
                }
            }
        }
    },
    "Outputs": {
        "GameDataBucket": {
            "Export": {
                "Name": "GameDataBucket"
            },
            "Value": {
                "Ref": "S3Bucket"
            }
        }
    }
}