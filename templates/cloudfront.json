{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFront configuration for websites.",
  "Parameters": {
    "FrontEndCertificateARN": {
      "Type": "String",
      "Default": "arn:aws:acm:us-east-1:432708775807:certificate/e37b362f-4bb0-424f-9e40-163ca164e8da",
      "Description": "ARN of certificate to protect frontend."
    },
    "BackEndCertificateARN": {
      "Type": "String",
      "Default": "arn:aws:acm:us-east-1:432708775807:certificate/f052dbe3-fdd8-4337-85ac-2019e0ee39b1",
      "Description": "ARN of certificate to protect backend."
    }
  },
  "Resources": {
    "FrontEndCloudFrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": {
                "Fn::Sub": [
                  "${Domain}.s3.amazonaws.com",
                  {
                    "Domain": {
                      "Fn::ImportValue": "BaseDomainName"
                    }
                  }
                ]
              },
              "Id": "FrontEndS3Origin",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Sub": [
                    "origin-access-identity/cloudfront/${OAI}",
                    {
                      "OAI": {
                        "Fn::ImportValue": "StationeeringCloudFrontOAI"
                      }
                    }
                  ]
                }
              }
            }
          ],
          "Enabled": "true",
          "Comment": "Cloudfront distribution for frontend of website.",
          "DefaultRootObject": "index.html",
          "Aliases": [
            {
              "Fn::ImportValue": "BaseDomainName"
            }
          ],
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD",
              "OPTIONS"
            ],
            "TargetOriginId": "FrontEndS3Origin",
            "ForwardedValues": {
              "QueryString": "false",
              "Cookies": {
                "Forward": "none"
              }
            },
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "SslSupportMethod": "sni-only",
            "AcmCertificateArn": {
              "Ref": "FrontEndCertificateARN"
            }
          },
          "CustomErrorResponses": [
            {
              "ErrorCode": 404,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            }
          ]
        }
      }
    },
    "BackEndCloudFrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": {
                "Fn::Sub": [
                  "data.${Domain}.s3.amazonaws.com",
                  {
                    "Domain": {
                      "Fn::ImportValue": "BaseDomainName"
                    }
                  }
                ]
              },
              "Id": "BackEndS3Origin",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Sub": [
                    "origin-access-identity/cloudfront/${OAI}",
                    {
                      "OAI": {
                        "Fn::ImportValue": "StationeeringCloudFrontOAI"
                      }
                    }
                  ]
                }
              }
            }
          ],
          "Enabled": "true",
          "Comment": "Cloudfront distribution for backend of website.",
          "DefaultRootObject": "index.html",
          "Aliases": [
            {
              "Fn::Sub": [
                "data.${Domain}",
                {
                  "Domain": {
                    "Fn::ImportValue": "BaseDomainName"
                  }
                }
              ]
            }
          ],
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD",
              "OPTIONS"
            ],
            "TargetOriginId": "BackEndS3Origin",
            "ForwardedValues": {
              "QueryString": "false",
              "Cookies": {
                "Forward": "none"
              }
            },
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "SslSupportMethod": "sni-only",
            "AcmCertificateArn": {
              "Ref": "BackEndCertificateARN"
            }
          }
        }
      }
    },
    "FrontEndAlias": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "HostedZoneName": {
          "Fn::Sub": [
            "${Domain}.",
            {
              "Domain": {
                "Fn::ImportValue": "BaseDomainName"
              }
            }
          ]
        },
        "Name": {
          "Fn::ImportValue": "BaseDomainName"
        },
        "Type": "A",
        "AliasTarget": {
          "DNSName": {
            "Fn::GetAtt": [
              "FrontEndCloudFrontDistribution",
              "DomainName"
            ]
          },
          "HostedZoneId": "Z2FDTNDATAQYW2"
        }
      }
    },
    "BackEndAlias": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "HostedZoneName": {
          "Fn::Sub": [
            "${Domain}.",
            {
              "Domain": {
                "Fn::ImportValue": "BaseDomainName"
              }
            }
          ]
        },
        "Name": {
          "Fn::Sub": [
            "data.${Domain}",
            {
              "Domain": {
                "Fn::ImportValue": "BaseDomainName"
              }
            }
          ]
        },
        "Type": "A",
        "AliasTarget": {
          "DNSName": {
            "Fn::GetAtt": [
              "FrontEndCloudFrontDistribution",
              "DomainName"
            ]
          },
          "HostedZoneId": "Z2FDTNDATAQYW2"
        }
      }
    }
  }
}
